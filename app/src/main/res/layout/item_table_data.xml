<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/border_light">

    <TextView
        android:id="@+id/city"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="14sp"
        android:gravity="left"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/januari" />

    <TextView
        android:id="@+id/januari"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/city"
        app:layout_constraintEnd_toStartOf="@id/februari" />

    <TextView
        android:id="@+id/februari"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/januari"
        app:layout_constraintEnd_toStartOf="@id/maret" />

    <TextView
        android:id="@+id/maret"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/februari"
        app:layout_constraintEnd_toStartOf="@id/april" />

    <TextView
        android:id="@+id/april"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/maret"
        app:layout_constraintEnd_toStartOf="@id/mei" />

    <TextView
        android:id="@+id/mei"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/april"
        app:layout_constraintEnd_toStartOf="@id/juni" />

    <TextView
        android:id="@+id/juni"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mei"
        app:layout_constraintEnd_toStartOf="@id/juli" />

    <TextView
        android:id="@+id/juli"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/juni"
        app:layout_constraintEnd_toStartOf="@id/agustus" />

    <TextView
        android:id="@+id/agustus"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/juli" />

</androidx.constraintlayout.widget.ConstraintLayout>
